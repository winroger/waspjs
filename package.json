{
  "name": "waspjs-monorepo",
  "private": true,
  "version": "0.2.2",
  "type": "module",
  "scripts": {
    "dev": "vite --config apps/demo/vite.config.js",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "npm run build --workspace webwaspjs",
    "build:demo": "vite build --config apps/demo/vite.config.js",
    "serve": "vite preview --config apps/demo/vite.config.js",
    "test": "npm run test:lib && npm run test:demo",
    "test:lib": "vitest --run --root packages/waspjs",
    "test:demo": "vitest --run --config apps/demo/vitest.config.ts",
    "test:watch": "vitest watch --root packages/waspjs",
    "lint": "eslint \"packages/waspjs/{src,tests}/**/*.{js,jsx,mjs}\"",
    "format": "prettier -w ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/winroger/waspjs.git"
  },
  "keywords": [
    "wasp",
    "discrete",
    "configurator",
    "modular"
  ],
  "author": "Roger Winkler",
  "license": "MIT",
  "description": "A replica of the Rhino3D / Grasshopper plugin WASP by Andrea Rossi in Javascript.",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "vite": "^5.4.11",
    "vitest": "^1.6.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "tsup": "^8.1.0",
    "typescript": "^5.4.0"
  },
  "directories": {
    "test": "test"
  },
  "bugs": {
    "url": "https://github.com/winroger/waspjs/issues"
  },
  "homepage": "https://github.com/winroger/waspjs#readme"
}
